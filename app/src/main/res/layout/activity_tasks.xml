<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/carId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        tools:context=".Tasks">


        <Spinner
            android:id="@+id/r_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_chooseRoute"
            android:layout_alignStart="@+id/title_chooseRoute"
            android:layout_alignLeft="@+id/title_chooseRoute"
            android:layout_alignEnd="@+id/title_chooseRoute"
            android:layout_alignRight="@+id/title_chooseRoute"
            android:layout_marginStart="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp" />

        <EditText
            android:id="@+id/licId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="161dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Licenca"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <EditText
            android:id="@+id/matId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="127dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="34dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Matricula"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <EditText
            android:id="@+id/carid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Marca do carro"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

        </com.google.android.material.appbar.AppBarLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-156dp"
            android:text="Button" />

        <Button
            android:id="@+id/btRegister"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvUserLogin"
            android:layout_below="@+id/r_spinner"
            android:layout_alignStart="@+id/licId"
            android:layout_alignLeft="@+id/licId"
            android:layout_alignEnd="@+id/licId"
            android:layout_alignRight="@+id/licId"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="33dp"
            android:text="Register" />

        <TextView
            android:id="@+id/tvUserLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="61dp"
            android:text="Already Signed In? Login"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <TextView
            android:id="@+id/title_chooseRoute"
            android:layout_width="316dp"
            android:layout_height="27dp"
            android:layout_above="@+id/routes_spinner"
            android:layout_below="@+id/licId"
            android:layout_alignStart="@+id/matId"
            android:layout_alignEnd="@+id/licId"
            android:layout_alignRight="@+id/licId"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="-3dp"
            android:background="@drawable/bg_gradient"
            android:text="Select Route"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>