<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Full name"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:layout_below="@+id/name"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:layout_below="@+id/email"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/pass"
            android:layout_margin="8dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />
        <EditText
            android:id="@+id/carid"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/password2"
            android:layout_margin="8dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Marca do carro"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <EditText
            android:id="@+id/matId"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/carid"
            android:layout_margin="8dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Matricula"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />



        <EditText
            android:id="@+id/licId"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/matId"
            android:layout_margin="8dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Licenca"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <TextView
            android:id="@+id/title_chooseRoute"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/licId"
            android:layout_margin="8dp"
            android:ems="10"
            android:background="@drawable/bg_gradient"
            android:text="Chose Route"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/origin_field"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/title_chooseRoute"
            android:layout_margin="8dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Origin"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <EditText
            android:id="@+id/dest_field"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/origin_field"
            android:layout_margin="8dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:ems="10"
            android:hint="Destination"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorPrimary" />

        <Button
            android:id="@+id/btRegister"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dest_field"
            android:layout_marginBottom="46dp"
            android:text="Register" />


        <TextView
            android:id="@+id/tvUserLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Already Signed In? Login"
            android:textSize="16sp" />



    </RelativeLayout>

</ScrollView>